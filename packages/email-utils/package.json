{
  "name": "@p4rm/email-utils",
  "version": "1.4.1",
  "description": "",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "private": false,
  "scripts": {
    "prepare": "npm run build",
    "build": "node ./clean.js | tsc",
    "generate-docs": "embedme --stdout --strip-embed-comment README.template.md > README.md",
    "lint": "eslint ./src --ext .ts,.tsx"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src"
  ],
  "nyc": {
    "check-coverage": false,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/**.interface.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/reports/coverage"
  },
  "dependencies": {
    "@p4rm/logger-utils": "^1.4.0",
    "imap": "0.8.19",
    "mailparser": "2.8.1",
    "node-email-reply-parser": "^0.1.1",
    "nodemailer": "^6.6.5"
  },
  "devDependencies": {
    "@types/imap": "^0.8.31",
    "@types/mailparser": "^2.7.3",
    "@types/nodemailer": "^6.4.0"
  },
  "keywords": [],
  "author": "Shivaji Varma Pusapati Venkata <contact@shivajivarma.com>",
  "license": "Apache-2.0",
  "gitHead": "b331036d49aa204185847fe97d23f3a249ef9bc8"
}
